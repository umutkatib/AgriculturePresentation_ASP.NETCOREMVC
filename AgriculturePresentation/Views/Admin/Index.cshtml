@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th class="text-center">Düzenle</th>
                            <th class="text-center">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminID</td>
                                <td>@item.UserName</td>
                                <td><a href="/Admin/EditAdmin/@item.AdminID" class="btn btn-outline-info d-block">Güncelle</a></td>
                                <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-outline-danger d-block">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/AddAdmin" class="btn btn-success mt-4 d-block btn-lg">Yeni Admin Girişi</a>
            </div>
        </div>
    </div>
</div>
